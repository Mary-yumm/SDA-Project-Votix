<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="votix.controllers.PollingPC.CastVoteController"
            stylesheets="@../../style/style.css"
            prefWidth="1920.0"
            styleClass="root">

    <!-- Title Bar -->
    <AnchorPane styleClass="title-bar" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" prefHeight="100.0">
        <Label text="Cast Your Vote" styleClass="title-bar-text" layoutX="800.0" layoutY="20.0" style="-fx-text-fill: white; -fx-font-size: 60px;"/>
    </AnchorPane>

    <!-- Instructions for Voting -->
    <Label text="Instructions: Select the checkbox next to the candidate you wish to vote for."
           styleClass="instructions-label" layoutX="100.0" layoutY="150.0" style="-fx-font-size: 24px; -fx-text-fill: #333333;"/>

    <!-- Candidate Table within a ScrollPane to prevent overlap -->
    <ScrollPane layoutX="100.0" layoutY="200.0" prefWidth="1720.0" prefHeight="700.0" fitToWidth="true">
        <VBox fx:id="candidateTable" spacing="10.0">
            <!-- Table Headers -->
            <HBox spacing="300.0" styleClass="table-header">
                <Label text="Candidate Name" styleClass="table-header-cell" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label text="Party Name" styleClass="table-header-cell" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label text="Party Symbol" styleClass="table-header-cell" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label text="Select" styleClass="table-header-cell" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            </HBox>
            <!-- Candidate rows will be dynamically added here by the controller -->
        </VBox>
    </ScrollPane>

    <!-- Submit Button, positioned at the bottom of the screen near the table -->
    <Button text="Submit" fx:id="submitButton" onAction="#handleSubmit" styleClass="submit-button"
            AnchorPane.leftAnchor="860.0" AnchorPane.bottomAnchor="10.0" />

</AnchorPane>
