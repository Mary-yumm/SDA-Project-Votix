<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="votix.controllers.PollingPC.PollingPcController" stylesheets="@../../style/style.css">
    <!-- Main content area (dynamic content) -->
    <center>
        <VBox>
            <AnchorPane fx:id="contentPane" prefHeight = "915.0"/> <!-- Adjust height as needed -->
        </VBox>
    </center>

    <!-- Bottom navigation bar -->
    <bottom>
        <HBox prefHeight="100.0" spacing="20.0" alignment="CENTER" style="-fx-background-color: #385B4F; -fx-padding: 10;">
            <!-- Buttons now use the button style class and fx:id for control -->
            <Button fx:id="tab1Button" text="Capture Voter Info" styleClass="button" onAction="#selectTab1" />
            <Button fx:id="tab2Button" text="Cast Vote" styleClass="button" onAction="#selectTab2" />
            <Button fx:id="tab3Button" text="Polling Station Info" styleClass="button" onAction="#selectTab3" />
        </HBox>
    </bottom>
</BorderPane>
