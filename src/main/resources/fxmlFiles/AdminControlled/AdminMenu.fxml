<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane fx:id="contentPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="1080.0" prefWidth="1920.0" styleClass="root" stylesheets="@../../style/style.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="votix.controllers.AdminControllers.AdminMenuController">
   <!-- Page Title -->
   <Label layoutX="777.0" layoutY="60.0" text="Select an action to perform:"/>

   <!-- Buttons organized in a GridPane -->
   <GridPane hgap="100" layoutX="650.0" layoutY="150.0" vgap="25">
      <columnConstraints>
         <ColumnConstraints/>
         <ColumnConstraints/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints/>
         <RowConstraints/>
         <RowConstraints/>
         <RowConstraints/>
         <RowConstraints/>
      </rowConstraints>
      <Button fx:id="viewCandidate" onAction="#viewCandidateList" prefHeight="55.0" prefWidth="250.0"
              styleClass="submit-button" text="View Candidate List" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
      <Button fx:id="addCand" onAction="#addCandidate" prefHeight="55.0" prefWidth="250.0" styleClass="submit-button"
              text="Add a Candidate" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
      <Button fx:id="viewreport" onAction="#viewElectionReport" prefHeight="55.0" prefWidth="250.0"
              styleClass="submit-button" text="View Election Report" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
      <Button fx:id="viewresult" onAction="#viewElectionResult" prefHeight="55.0" prefWidth="250.0"
              styleClass="submit-button" text="View Election Result" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
      <Button fx:id="viewForm" onAction="#viewElectionForm" prefHeight="55.0" prefWidth="250.0"
              styleClass="submit-button" text="View Election Forms" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
      <Button fx:id="viewStaff" onAction="#viewStaffAssignments" prefHeight="55.0" prefWidth="250.0"
              styleClass="submit-button" text="View Staff Assignments" GridPane.columnIndex="1"
              GridPane.rowIndex="2"/>
      <Button fx:id="pollingStaff" onAction="#addPollingStaff" prefHeight="55.0" prefWidth="250.0"
              styleClass="submit-button" text="Add Polling Staff" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
      <Button fx:id="staffUpdation" onAction="#update_DeactivaeStaff" prefHeight="55.0" prefWidth="250.0"
              styleClass="submit-button" text="Update/Deactivate Staff" GridPane.columnIndex="1"
              GridPane.rowIndex="3"/>
      <Button fx:id="monitorSystems" onAction="#monitorActiveSystems" prefHeight="55.0" prefWidth="250.0"
              styleClass="submit-button" text="Monitor Active Systems" GridPane.columnIndex="0"
              GridPane.rowIndex="4"/>
      <Button fx:id="viewLogs" onAction="#viewLogs" prefHeight="55.0" prefWidth="250.0" text="View Logs"
              styleClass="submit-button" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
   </GridPane>

   <!-- Separators -->
   <Separator layoutY="19.0" prefHeight="18.0" prefWidth="1920.0" style="-fx-background-color: #385B4F;"/>
   <Separator layoutY="950.0" prefHeight="18.0" prefWidth="1920.0" style="-fx-background-color: #385B4F;"/>
</AnchorPane>
